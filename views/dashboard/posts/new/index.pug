  body
    .container-scroller
      // partial:../../partials/_navbar.html
      include ../../partials/navbar.pug
      // partial
      .container-fluid.page-body-wrapper
        // partial:../../partials/_sidebar.html
        include ../../partials/sidebar.pug
        // partial
        .main-panel
          .content-wrapper
            .row
              .col-12.grid-margin.stretch-card
                .card
                  .card-body
                    h4.card-title Add the new post
                    form(action="/dashboard/posts/new" method="post").forms-sample
                      .form-group
                        label(for='title') Title
                        input#title.form-control(type='text' placeholder='Title' name='title')
                      .form-group
                        label(for='body') Body
                        textarea(name="body")#body.form-control(rows='4')
                      .form-group
                        label.col-form-label Status
                        select(name="status").form-control
                          option(selected value="Y") Published
                          option(value="N") Draft
                      button.btn.btn-primary.mr-2(type='submit') Save Post 
                      a(href="/dashboard/posts" class="text-dark") 
                        button.btn.btn-light Cancel
          // content-wrapper ends
          // partial:../../partials/_footer.html
          footer.footer
            .d-sm-flex.justify-content-center.justify-content-sm-between
