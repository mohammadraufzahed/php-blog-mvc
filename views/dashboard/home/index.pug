doctype html
html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title=$title
    // plugins:css
    link(rel='stylesheet' href='static/dashboard/vendors/mdi/css/materialdesignicons.min.css')
    link(rel='stylesheet' href='static/dashboard/vendors/base/vendor.bundle.base.css')
    // endinject
    // plugin css for this page
    link(rel='stylesheet' href='static/dashboard/vendors/datatables.net-bs4/dataTables.bootstrap4.css')
    // End plugin css for this page
    // inject:css
    link(rel='stylesheet' href='static/dashboard/css/style.css')
    // endinject
    link(rel='shortcut icon' href='static/dashboard/images/favicon.png')
  body
    .container-scroller
      // partial:partials/_navbar.html
      nav.navbar.col-lg-12.col-12.p-0.fixed-top.d-flex.flex-row
        .navbar-brand-wrapper.d-flex.justify-content-center
          .navbar-brand-inner-wrapper.d-flex.justify-content-between.align-items-center.w-100
            a.navbar-brand.brand-logo(href='index.html')
              img(src='static/dashboard/images/logo.svg' alt='logo')
            a.navbar-brand.brand-logo-mini(href='index.html')
              img(src='static/dashboard/images/logo-mini.svg' alt='logo')
            button.navbar-toggler.navbar-toggler.align-self-center(type='button' data-toggle='minimize')
              span.mdi.mdi-sort-variant
        .navbar-menu-wrapper.d-flex.align-items-center.justify-content-end
          ul.navbar-nav.mr-lg-4.w-100
            li.nav-item.nav-search.d-none.d-lg-block.w-100
              .input-group
                .input-group-prepend
                  span#search.input-group-text
                    i.mdi.mdi-magnify
                input.form-control(type='text' placeholder='Search now' aria-label='search' aria-describedby='search')
          ul.navbar-nav.navbar-nav-right
            li.nav-item.dropdown.mr-1
              a#messageDropdown.nav-link.count-indicator.dropdown-toggle.d-flex.justify-content-center.align-items-center(href='#' data-toggle='dropdown')
                i.mdi.mdi-message-text.mx-0
                span.count
              .dropdown-menu.dropdown-menu-right.navbar-dropdown(aria-labelledby='messageDropdown')
                p.mb-0.font-weight-normal.float-left.dropdown-header Messages
                a.dropdown-item
                  .item-thumbnail
                    img.profile-pic(src='static/dashboard/images/faces/face4.jpg' alt='image')
                  .item-content.flex-grow
                    h6.ellipsis.font-weight-normal
                      | David Grey
                    p.font-weight-light.small-text.text-muted.mb-0
                      | The meeting is cancelled
                a.dropdown-item
                  .item-thumbnail
                    img.profile-pic(src='static/dashboard/images/faces/face2.jpg' alt='image')
                  .item-content.flex-grow
                    h6.ellipsis.font-weight-normal
                      | Tim Cook
                    p.font-weight-light.small-text.text-muted.mb-0
                      | New product launch
                a.dropdown-item
                  .item-thumbnail
                    img.profile-pic(src='static/dashboard/images/faces/face3.jpg' alt='image')
                  .item-content.flex-grow
                    h6.ellipsis.font-weight-normal
                      | Johnson
                    p.font-weight-light.small-text.text-muted.mb-0
                      | Upcoming board meeting
            li.nav-item.dropdown.mr-4
              a#notificationDropdown.nav-link.count-indicator.dropdown-toggle.d-flex.align-items-center.justify-content-center.notification-dropdown(href='#' data-toggle='dropdown')
                i.mdi.mdi-bell.mx-0
                span.count
              .dropdown-menu.dropdown-menu-right.navbar-dropdown(aria-labelledby='notificationDropdown')
                p.mb-0.font-weight-normal.float-left.dropdown-header Notifications
                a.dropdown-item
                  .item-thumbnail
                    .item-icon.bg-success
                      i.mdi.mdi-information.mx-0
                  .item-content
                    h6.font-weight-normal Application Error
                    p.font-weight-light.small-text.mb-0.text-muted
                      | Just now
                a.dropdown-item
                  .item-thumbnail
                    .item-icon.bg-warning
                      i.mdi.mdi-settings.mx-0
                  .item-content
                    h6.font-weight-normal Settings
                    p.font-weight-light.small-text.mb-0.text-muted
                      | Private message
                a.dropdown-item
                  .item-thumbnail
                    .item-icon.bg-info
                      i.mdi.mdi-account-box.mx-0
                  .item-content
                    h6.font-weight-normal New user registration
                    p.font-weight-light.small-text.mb-0.text-muted
                      | 2 days ago
            li.nav-item.nav-profile.dropdown
              a#profileDropdown.nav-link.dropdown-toggle(href='#' data-toggle='dropdown')
                img(src='static/dashboard/images/faces/face5.jpg' alt='profile')
                span.nav-profile-name=$username
              .dropdown-menu.dropdown-menu-right.navbar-dropdown(aria-labelledby='profileDropdown')
                a.dropdown-item
                  i.mdi.mdi-settings.text-primary
                  |                 Settings
                a.dropdown-item(href="/logout")
                  i.mdi.mdi-logout.text-primary
                  |                 Logout
          button.navbar-toggler.navbar-toggler-right.d-lg-none.align-self-center(type='button' data-toggle='offcanvas')
            span.mdi.mdi-menu
      // partial
      .container-fluid.page-body-wrapper
        // partial:partials/_sidebar.html
        include ../partials/sidebar.pug
        // partial
        .main-panel
          .content-wrapper
            .row
              .col-md-12.grid-margin
                .d-flex.justify-content-between.flex-wrap
                  .d-flex.align-items-end.flex-wrap
                    .mr-md-3.mr-xl-5
                      h2="Welcome back, " + $username
                  .d-flex.justify-content-between.align-items-end.flex-wrap
                    button.btn.btn-primary.mt-2.mt-xl-0 New Post
            .row
              .col-md-12.grid-margin.stretch-card
                .card
                  .card-body.dashboard-tabs.p-0
                    ul.nav.nav-tabs.px-4(role='tablist')
                      li.nav-item
                        a#overview-tab.nav-link.active(data-toggle='tab' href='#overview' role='tab' aria-controls='overview' aria-selected='true') Overview
                    .tab-content.py-0.px-0
                      #overview.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='overview-tab')
                        .d-flex.flex-wrap.justify-content-xl-between
                          .d-none.d-xl-flex.border-md-right.flex-grow-1.align-items-center.justify-content-center.p-3.item
                            i.mdi.mdi-calendar-heart.icon-lg.mr-3.text-primary
                            .d-flex.flex-column.justify-content-around
                              small.mb-1.text-muted Signup Date
                              .dropdown
                                a.btn.btn-secondary.p-0.bg-transparent.border-0.text-dark.shadow-none.font-weight-medium(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                                  h5.mb-0.d-inline-block=$signupDate
                          .d-flex.border-md-right.flex-grow-1.align-items-center.justify-content-center.p-3.item
                            i.mdi.mdi-note-outline.mr-3.icon-lg.text-danger
                            .d-flex.flex-column.justify-content-around
                              small.mb-1.text-muted Posts
                              h5.mr-2.mb-0=$countPost
                          .d-flex.border-md-right.flex-grow-1.align-items-center.justify-content-center.p-3.item
                            i.mdi.mdi-account.mr-3.icon-lg.text-success
                            .d-flex.flex-column.justify-content-around
                              small.mb-1.text-muted Users
                              h5.mr-2.mb-0=$countUser
            .row
              .col-md-12.stretch-card
                .card
                  .card-body
                    p.card-title Recent Posts
                    .table-responsive
                      table#recent-purchases-listing.table
                        thead
                          tr
                            th Title
                            th Writer
                            th Publish Status
                            th Create Time 
                        tbody
                            each post in $allPosts
                                tr
                                    td=post.title
                                    td=post.user_id
                                    td=post.published
                                    td=post.created_at
          // content-wrapper ends
          // partial:partials/_footer.html
          footer.footer
            .d-sm-flex.justify-content-center.justify-content-sm-between
              span.text-muted.d-block.text-center.text-sm-left.d-sm-inline-block Copyright Â© bootstrapdash.com 2020
              span.float-none.float-sm-right.d-block.mt-1.mt-sm-0.text-center
                | Free 
                a(href='https://www.bootstrapdash.com/' target='_blank') Bootstrap dashboard template
                |  from Bootstrapdash.com
          // partial
          // main-panel ends
          // page-body-wrapper ends
          // container-scroller
          // plugins:js
          script(src='static/dashboard/vendors/base/vendor.bundle.base.js')
          // endinject
          // Plugin js for this page
          script(src='static/dashboard/vendors/chart.js/Chart.min.js')
          script(src='static/dashboard/vendors/datatables.net/jquery.dataTables.js')
          script(src='static/dashboard/vendors/datatables.net-bs4/dataTables.bootstrap4.js')
          // End plugin js for this page
          // inject:js
          script(src='static/dashboard/js/off-canvas.js')
          script(src='static/dashboard/js/hoverable-collapse.js')
          script(src='static/dashboard/js/template.js')
          // endinject
          // Custom js for this page
          script(src='static/dashboard/js/dashboard.js')
          script(src='static/dashboard/js/data-table.js')
          script(src='static/dashboard/js/jquery.dataTables.js')
          script(src='static/dashboard/js/dataTables.bootstrap4.js')
          // End custom static/dashboard/js for this page
          script(src='static/dashboard/js/jquery.cookie.js' type='text/javascript')
