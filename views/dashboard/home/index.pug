doctype html
html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title=$title
    // plugins:css
    link(rel='stylesheet' href='static/dashboard/vendors/mdi/css/materialdesignicons.min.css')
    link(rel='stylesheet' href='static/dashboard/vendors/base/vendor.bundle.base.css')
    // endinject
    // plugin css for this page
    link(rel='stylesheet' href='static/dashboard/vendors/datatables.net-bs4/dataTables.bootstrap4.css')
    // End plugin css for this page
    // inject:css
    link(rel='stylesheet' href='static/dashboard/css/style.css')
    // endinject
    link(rel='shortcut icon' href='static/dashboard/images/favicon.png')
  body
    .container-scroller
      // partial:partials/_navbar.html
      include ../partials/navbar.pug
      // partial
      .container-fluid.page-body-wrapper
        // partial:partials/_sidebar.html
        include ../partials/sidebar.pug
        // partial
        .main-panel
          .content-wrapper
            .row
              .col-md-12.grid-margin
                .d-flex.justify-content-between.flex-wrap
                  .d-flex.align-items-end.flex-wrap
                    .mr-md-3.mr-xl-5
                      h2="Welcome back, " + $username
                  .d-flex.justify-content-between.align-items-end.flex-wrap
                    button.btn.btn-primary.mt-2.mt-xl-0 New Post
            .row
              .col-md-12.grid-margin.stretch-card
                .card
                  .card-body.dashboard-tabs.p-0
                    ul.nav.nav-tabs.px-4(role='tablist')
                      li.nav-item
                        a#overview-tab.nav-link.active(data-toggle='tab' href='#overview' role='tab' aria-controls='overview' aria-selected='true') Overview
                    .tab-content.py-0.px-0
                      #overview.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='overview-tab')
                        .d-flex.flex-wrap.justify-content-xl-between
                          .d-none.d-xl-flex.border-md-right.flex-grow-1.align-items-center.justify-content-center.p-3.item
                            i.mdi.mdi-calendar-heart.icon-lg.mr-3.text-primary
                            .d-flex.flex-column.justify-content-around
                              small.mb-1.text-muted Signup Date
                              .dropdown
                                a.btn.btn-secondary.p-0.bg-transparent.border-0.text-dark.shadow-none.font-weight-medium(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                                  h5.mb-0.d-inline-block=$signupDate
                          .d-flex.border-md-right.flex-grow-1.align-items-center.justify-content-center.p-3.item
                            i.mdi.mdi-note-outline.mr-3.icon-lg.text-danger
                            .d-flex.flex-column.justify-content-around
                              small.mb-1.text-muted Posts
                              h5.mr-2.mb-0=$countPost
                          .d-flex.border-md-right.flex-grow-1.align-items-center.justify-content-center.p-3.item
                            i.mdi.mdi-account.mr-3.icon-lg.text-success
                            .d-flex.flex-column.justify-content-around
                              small.mb-1.text-muted Users
                              h5.mr-2.mb-0=$countUser
            .row
              .col-md-12.stretch-card
                .card
                  .card-body
                    p.card-title Recent Posts
                    .table-responsive
                      table#recent-purchases-listing.table
                        thead
                          tr
                            th Title
                            th Writer
                            th Publish Status
                            th Create Time 
                        tbody
                            each post in $allPosts
                                tr
                                    td=post.title
                                    td=post.user_id
                                    td=post.published
                                    td=post.created_at
                                    td
                                      a(href='/dashboard/posts/delete?id=' + post.id target='_blank' rel='noopener noreferrer')
                                        button.btn-danger Delete
                                      a(href='/dashboard/posts/edit?id=' + post.id target='_blank' rel='noopener noreferrer')
                                        button.btn-success Edit
          // content-wrapper ends
          // partial:partials/_footer.html
          footer.footer
            .d-sm-flex.justify-content-center.justify-content-sm-between
              span.text-muted.d-block.text-center.text-sm-left.d-sm-inline-block Copyright Â© bootstrapdash.com 2020
              span.float-none.float-sm-right.d-block.mt-1.mt-sm-0.text-center
                | Free 
                a(href='https://www.bootstrapdash.com/' target='_blank') Bootstrap dashboard template
                |  from Bootstrapdash.com
          // partial
          // main-panel ends
          // page-body-wrapper ends
          // container-scroller
          // plugins:js
          script(src='static/dashboard/vendors/base/vendor.bundle.base.js')
          // endinject
          // Plugin js for this page
          script(src='static/dashboard/vendors/chart.js/Chart.min.js')
          script(src='static/dashboard/vendors/datatables.net/jquery.dataTables.js')
          script(src='static/dashboard/vendors/datatables.net-bs4/dataTables.bootstrap4.js')
          // End plugin js for this page
          // inject:js
          script(src='static/dashboard/js/off-canvas.js')
          script(src='static/dashboard/js/hoverable-collapse.js')
          script(src='static/dashboard/js/template.js')
          // endinject
          // Custom js for this page
          script(src='static/dashboard/js/dashboard.js')
          script(src='static/dashboard/js/data-table.js')
          script(src='static/dashboard/js/jquery.dataTables.js')
          script(src='static/dashboard/js/dataTables.bootstrap4.js')
          // End custom static/dashboard/js for this page
          script(src='static/dashboard/js/jquery.cookie.js' type='text/javascript')
